<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_resident_notifi_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Android Demo"
            android:textColor="#474747"
            android:textSize="12sp" />

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/tvOpt"
            android:textSize="10sp"
            android:text="展开"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/itmeFunction01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNOtify01"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/xes_resident_notifi_calculation" />

            <TextView
                android:id="@+id/tvNOtify01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="口算"
                android:textColor="#212831"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/itmeFunction02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNOtify02"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/xes_resident_notifi_calculation" />

            <TextView
                android:id="@+id/tvNOtify02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="口算"
                android:textColor="#212831"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itmeFunction03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNOtify03"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/xes_resident_notifi_calculation" />

            <TextView
                android:id="@+id/tvNOtify03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="口算"
                android:textColor="#212831"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/itmeFunction04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNOtify04"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/xes_resident_notifi_calculation" />

            <TextView
                android:id="@+id/tvNOtify04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="口算"
                android:textColor="#212831"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>