<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222637">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp"
        android:gravity="center">

        <demos.android.stormdzh.com.androiddemos.wave.SpreadView
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:shapespread_center_color="#ffff00"
            app:shapespread_delay_milliseconds="350"
            app:shapespread_distance="3"
            app:shapespread_max_radius="19dp"
            app:shapespread_radius="10dp"
            app:shapespread_spread_color="#ffff00" />

    </RelativeLayout>
</RelativeLayout>
