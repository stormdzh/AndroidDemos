<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llCommonMsgBubble"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_common_msg_bubble"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/msgBubbleAvatar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_test_face"
                 />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvMsgBubbleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:lines="1"
            android:maxEms="10"
            android:text="我是气泡的内容"
            android:textColor="#ffffff"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:src="@drawable/music_icon" />
    </LinearLayout>

    <ImageView
        android:layout_alignRight="@id/llCommonMsgBubble"
        android:id="@+id/msgBubbleArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCommonMsgBubble"
        android:src="@drawable/ic_common_msg_arrow_down"
        tools:layout_alignRight="@+id/llCommonMsgBubble"
        android:layout_marginRight="60dp" />

</RelativeLayout>